{
    "name": "aplus/date",
    "type": "library",
    "description": "Aplus Framework Date Library",
    "keywords": [
        "date",
        "datetime"
    ],
    "homepage": "https://docs.aplus-framework.com/guides/libraries/date/",
    "license": "MIT",
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-intl": "*"
    },
    "require-dev": {
        "ext-json": "*",
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.9",
        "ergebnis/composer-normalize": "^2.15",
        "phpmd/phpmd": "^2.10",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Framework\\Date\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Date\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "email": "support@aplus-framework.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/date/issues",
        "wiki": "https://gitlab.com/aplus-framework/libraries/date/wikis/home",
        "source": "https://gitlab.com/aplus-framework/libraries/date",
        "docs": "https://docs.aplus-framework.com/guides/libraries/date/"
    },
    "funding": [
        {
            "type": "other",
            "url": "https://www.paypal.com/donate/?hosted_button_id=NGBNW5PY4VSJ4"
        }
    ]
}
